{{template "base" .}}

{{define "content"}}
<!-- Page Header -->
<section class="bg-primary text-white py-5">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <h1 class="display-4 fw-bold mb-3">Contact Us</h1>
        <p class="lead mb-0">We're here to help make your stay unforgettable</p>
      </div>
    </div>
  </div>
</section>

<!-- Contact Information -->
<section class="py-5">
  <div class="container">
    <div class="row g-5">
      <div class="col-lg-8">
        <div class="card border-0 shadow-lg">
          <div class="card-body p-5">
            <h3 class="mb-4">Send us a Message</h3>
            <form>
              <div class="row g-3">
                <div class="col-md-6">
                  <label for="firstName" class="form-label fw-semibold">First Name</label>
                  <input type="text" class="form-control form-control-lg" id="firstName" required>
                </div>
                <div class="col-md-6">
                  <label for="lastName" class="form-label fw-semibold">Last Name</label>
                  <input type="text" class="form-control form-control-lg" id="lastName" required>
                </div>
                <div class="col-12">
                  <label for="email" class="form-label fw-semibold">Email Address</label>
                  <input type="email" class="form-control form-control-lg" id="email" required>
                </div>
                <div class="col-12">
                  <label for="phone" class="form-label fw-semibold">Phone Number</label>
                  <input type="tel" class="form-control form-control-lg" id="phone">
                </div>
                <div class="col-12">
                  <label for="subject" class="form-label fw-semibold">Subject</label>
                  <select class="form-select form-select-lg" id="subject" required>
                    <option value="">Choose a subject...</option>
                    <option value="reservation">Reservation Inquiry</option>
                    <option value="existing">Existing Reservation</option>
                    <option value="general">General Question</option>
                    <option value="feedback">Feedback</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                <div class="col-12">
                  <label for="message" class="form-label fw-semibold">Message</label>
                  <textarea class="form-control" id="message" rows="5" 
                    placeholder="Tell us how we can help you..." required></textarea>
                </div>
                <div class="col-12">
                  <button type="submit" class="btn btn-primary btn-lg px-5 py-3">
                    <i class="bi bi-send me-2"></i>Send Message
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      
      <div class="col-lg-4">
        <div class="row g-4">
          <!-- Contact Information -->
          <div class="col-12">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body p-4 text-center">
                <div class="display-4 text-primary mb-3">
                  <i class="bi bi-telephone"></i>
                </div>
                <h5>Call Us</h5>
                <p class="mb-2">(555) 123-4567</p>
                <small class="text-muted">Daily 8:00 AM - 8:00 PM</small>
              </div>
            </div>
          </div>
          
          <div class="col-12">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body p-4 text-center">
                <div class="display-4 text-primary mb-3">
                  <i class="bi bi-envelope"></i>
                </div>
                <h5>Email Us</h5>
                <p class="mb-2">info@fortsmythebnb.com</p>
                <small class="text-muted">We respond within 24 hours</small>
              </div>
            </div>
          </div>
          
          <div class="col-12">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body p-4 text-center">
                <div class="display-4 text-primary mb-3">
                  <i class="bi bi-geo-alt"></i>
                </div>
                <h5>Visit Us</h5>
                <p class="mb-2">123 Ocean Drive<br>Fort Smythe, NS B0H 1K0</p>
                <small class="text-muted">Canada</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Map Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row justify-content-center text-center mb-5">
      <div class="col-lg-8">
        <h2 class="display-6 mb-4">Find Us</h2>
        <p class="lead text-muted">Located on the scenic Atlantic coastline, just minutes from downtown</p>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="card border-0 shadow-lg">
          <div class="card-body p-0">
            <div class="ratio ratio-21x9" style="height: 400px;">
              <div class="bg-secondary d-flex align-items-center justify-content-center rounded">
                <div class="text-center text-white">
                  <i class="bi bi-map display-1 mb-3"></i>
                  <h4>Interactive Map</h4>
                  <p>Map integration would go here</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Emergency Contact -->
<section class="py-4 bg-primary text-white">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <h5 class="mb-2">
          <i class="bi bi-exclamation-triangle me-2"></i>
          24/7 Emergency Contact
        </h5>
        <p class="mb-0">For urgent matters outside business hours, call (555) 123-4567 and press 1</p>
      </div>
    </div>
  </div>
</section>


<footer class="my-footer">
    <div class="container">
        <div class="row">
            <div class="col">
                left
            </div>

            <div class="col">
                center
            </div>

            <div class="col">
                right
            </div>
        </div>
    </div>
</footer>
{{end}}
