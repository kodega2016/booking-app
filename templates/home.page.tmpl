{{template "base" .}}

{{define "content"}}
<!-- Hero Carousel Section -->
<section class="position-relative overflow-hidden">
  <div id="main-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="6000">
    <!-- Custom Indicators -->
    <div class="carousel-indicators position-absolute bottom-0 start-50 translate-middle-x mb-4">
      <button type="button" data-bs-target="#main-carousel" data-bs-slide-to="0" class="active rounded-pill" 
              aria-current="true" aria-label="Welcome slide" style="width: 12px; height: 12px;"></button>
      <button type="button" data-bs-target="#main-carousel" data-bs-slide-to="1" class="rounded-pill" 
              aria-label="Rooms slide" style="width: 12px; height: 12px;"></button>
      <button type="button" data-bs-target="#main-carousel" data-bs-slide-to="2" class="rounded-pill" 
              aria-label="Experience slide" style="width: 12px; height: 12px;"></button>
    </div>
    
    <div class="carousel-inner">
      <!-- Slide 1: Welcome & Ocean Views -->
      <div class="carousel-item active">
        <div class="position-relative">
          <img src="static/images/outside.png" class="d-block w-100" style="height: 70vh; object-fit: cover;" alt="Fort Smythe oceanfront exterior">
          <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(45deg, rgba(37, 99, 235, 0.8), rgba(37, 99, 235, 0.3));"></div>
        </div>
        <div class="carousel-caption position-absolute top-50 start-50 translate-middle text-center w-100 px-3">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-8">
                <h1 class="display-2 fw-bold mb-4 text-white" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
                  Escape to Paradise
                </h1>
                <p class="fs-4 mb-4 text-white-50 fw-light" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.5);">
                  Where Atlantic waves meet Victorian elegance in perfect harmony
                </p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                  <a href="/search-availability" class="btn btn-light btn-lg px-5 py-3 text-primary fw-semibold">
                    <i class="bi bi-calendar-check me-2"></i>Book Your Escape
                  </a>
                  <a href="/about" class="btn btn-outline-light btn-lg px-5 py-3">
                    <i class="bi bi-info-circle me-2"></i>Our Story
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Slide 2: Luxury Accommodations -->
      <div class="carousel-item">
        <div class="position-relative">
          <img src="static/images/woman-laptop.png" class="d-block w-100" style="height: 70vh; object-fit: cover;" alt="Elegant guest room with modern amenities">
          <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.8), rgba(16, 185, 129, 0.3));"></div>
        </div>
        <div class="carousel-caption position-absolute top-50 start-50 translate-middle text-center w-100 px-3">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-8">
                <div class="mb-3">
                  <span class="badge bg-light text-success fs-6 px-3 py-2 rounded-pill">Premium Accommodations</span>
                </div>
                <h2 class="display-3 fw-bold mb-4 text-white" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
                  Luxury Redefined
                </h2>
                <p class="fs-4 mb-4 text-white-50 fw-light" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.5);">
                  Each suite thoughtfully designed with modern comforts and timeless charm
                </p>
                <div class="row g-3 mb-4 text-white justify-content-center">
                  <div class="col-auto">
                    <i class="bi bi-wifi fs-3 me-2"></i>
                    <span class="fs-5">High-Speed WiFi</span>
                  </div>
                  <div class="col-auto">
                    <i class="bi bi-water fs-3 me-2"></i>
                    <span class="fs-5">Ocean Views</span>
                  </div>
                  <div class="col-auto">
                    <i class="bi bi-cup-hot fs-3 me-2"></i>
                    <span class="fs-5">Premium Service</span>
                  </div>
                </div>
                <a href="/generals-quarters" class="btn btn-success btn-lg px-5 py-3">
                  <i class="bi bi-door-open me-2"></i>Explore Our Suites
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Slide 3: Culinary Experience -->
      <div class="carousel-item">
        <div class="position-relative">
          <img src="static/images/tray.png" class="d-block w-100" style="height: 70vh; object-fit: cover;" alt="Gourmet breakfast service">
          <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(225deg, rgba(245, 158, 11, 0.85), rgba(245, 158, 11, 0.4));"></div>
        </div>
        <div class="carousel-caption position-absolute top-50 start-50 translate-middle text-center w-100 px-3">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-8">
                <div class="mb-3">
                  <span class="badge bg-light text-warning fs-6 px-3 py-2 rounded-pill">Culinary Excellence</span>
                </div>
                <h2 class="display-3 fw-bold mb-4 text-white" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
                  Savor Every Moment
                </h2>
                <p class="fs-4 mb-4 text-white-50 fw-light" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.5);">
                  Award-winning breakfast featuring local ingredients and artisanal preparation
                </p>
                <div class="row text-white mb-4 justify-content-center g-2">
                  <div class="col-md-4">
                    <div class="d-flex align-items-center justify-content-center">
                      <i class="bi bi-award fs-3 me-2"></i>
                      <span>Award Winning</span>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="d-flex align-items-center justify-content-center">
                      <i class="bi bi-heart fs-3 me-2"></i>
                      <span>Made with Love</span>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="d-flex align-items-center justify-content-center">
                      <i class="bi bi-clock fs-3 me-2"></i>
                      <span>Fresh Daily</span>
                    </div>
                  </div>
                </div>
                <a href="/contact" class="btn btn-warning btn-lg px-5 py-3 text-dark fw-semibold">
                  <i class="bi bi-envelope-heart me-2"></i>Make a Reservation
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Custom Navigation Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#main-carousel" data-bs-slide="prev">
      <div class="bg-white bg-opacity-25 rounded-circle p-3" style="backdrop-filter: blur(10px);">
        <i class="bi bi-chevron-left text-white fs-3"></i>
      </div>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#main-carousel" data-bs-slide="next">
      <div class="bg-white bg-opacity-25 rounded-circle p-3" style="backdrop-filter: blur(10px);">
        <i class="bi bi-chevron-right text-white fs-3"></i>
      </div>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</section>

<!-- Welcome Section -->
<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <h1 class="display-3 text-gradient mb-4 fade-in-up">Welcome to Fort Smythe Bed & Breakfast</h1>
        <p class="lead mb-4">
          Your home away from home, set on the majestic waters of the Atlantic Ocean. 
          Experience luxury accommodations in a historic setting that will make your stay truly memorable.
        </p>
        <p class="mb-5">
          Nestled along the pristine coastline, our beautifully restored Victorian mansion offers 
          an unparalleled escape from the everyday. Each carefully appointed room features period 
          furnishings, modern amenities, and breathtaking ocean views.
        </p>
        <a href="/search-availability" class="btn btn-primary btn-lg px-5 py-3">
          <i class="bi bi-calendar-check me-2"></i>Book Your Stay
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row g-4">
      <div class="col-md-4 text-center">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body p-4">
            <div class="display-4 text-primary mb-3">
              <i class="bi bi-wifi"></i>
            </div>
            <h4>Modern Amenities</h4>
            <p class="card-text">High-speed WiFi, climate control, and premium bedding for your comfort.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 text-center">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body p-4">
            <div class="display-4 text-primary mb-3">
              <i class="bi bi-cup-hot"></i>
            </div>
            <h4>Gourmet Breakfast</h4>
            <p class="card-text">Fresh, locally-sourced ingredients prepared by our expert culinary team.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 text-center">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body p-4">
            <div class="display-4 text-primary mb-3">
              <i class="bi bi-geo-alt"></i>
            </div>
            <h4>Prime Location</h4>
            <p class="card-text">Steps from the beach and historic downtown attractions.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Modern Footer -->
<footer class="my-footer mt-5">
  <div class="container">
    <div class="row g-4">
      <div class="col-lg-4">
        <h5 class="text-white mb-3">Fort Smythe B&B</h5>
        <p class="text-light">Experience luxury and comfort in our historic oceanfront bed & breakfast.</p>
        <div class="d-flex gap-3">
          <a href="#" class="text-light">
            <i class="bi bi-facebook fs-4"></i>
          </a>
          <a href="#" class="text-light">
            <i class="bi bi-instagram fs-4"></i>
          </a>
          <a href="#" class="text-light">
            <i class="bi bi-twitter fs-4"></i>
          </a>
        </div>
      </div>
      <div class="col-lg-4">
        <h5 class="text-white mb-3">Quick Links</h5>
        <ul class="list-unstyled">
          <li class="mb-2"><a href="/about" class="text-light text-decoration-none">About Us</a></li>
          <li class="mb-2"><a href="/generals-quarters" class="text-light text-decoration-none">Rooms</a></li>
          <li class="mb-2"><a href="/search-availability" class="text-light text-decoration-none">Reservations</a></li>
          <li class="mb-2"><a href="/contact" class="text-light text-decoration-none">Contact</a></li>
        </ul>
      </div>
      <div class="col-lg-4">
        <h5 class="text-white mb-3">Contact Info</h5>
        <div class="text-light">
          <p class="mb-2">
            <i class="bi bi-geo-alt me-2"></i>
            123 Ocean Drive, Fort Smythe, NS
          </p>
          <p class="mb-2">
            <i class="bi bi-telephone me-2"></i>
            (555) 123-4567
          </p>
          <p class="mb-0">
            <i class="bi bi-envelope me-2"></i>
            info@fortsmythebnb.com
          </p>
        </div>
      </div>
    </div>
    <hr class="my-4" style="border-color: rgba(255,255,255,0.1);">
    <div class="row">
      <div class="col text-center">
        <p class="text-light mb-0">
