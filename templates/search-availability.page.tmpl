{{template "base" .}}

{{define "content"}}
<!-- Page Header -->
<section class="bg-primary text-white py-5">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <h1 class="display-4 fw-bold mb-3">Check Availability</h1>
        <p class="lead mb-0">Find the perfect dates for your stay at Fort Smythe Bed & Breakfast</p>
      </div>
    </div>
  </div>
</section>

<!-- Search Form Section -->
<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card border-0 shadow-lg">
          <div class="card-body p-5">
            <div class="text-center mb-4">
              <i class="bi bi-calendar-check display-4 text-primary mb-3"></i>
              <h3>Select Your Dates</h3>
              <p class="text-muted">Choose your arrival and departure dates to see available rooms</p>
            </div>

            <form action="/search-availability" method="post" novalidate class="needs-validation">
              <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
              
              <div class="row g-3" id="reservation-dates">
                <div class="col-md-6">
                  <label for="start" class="form-label fw-semibold">
                    <i class="bi bi-calendar-plus me-2"></i>Check-in Date
                  </label>
                  <input required class="form-control form-control-lg" type="text" name="start" 
                         id="start" placeholder="Select arrival date">
                  <div class="invalid-feedback">
                    Please select your arrival date.
                  </div>
                </div>
                <div class="col-md-6">
                  <label for="end" class="form-label fw-semibold">
                    <i class="bi bi-calendar-x me-2"></i>Check-out Date
                  </label>
                  <input required class="form-control form-control-lg" type="text" name="end" 
                         id="end" placeholder="Select departure date">
                  <div class="invalid-feedback">
                    Please select your departure date.
                  </div>
                </div>
              </div>

              <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary btn-lg py-3">
                  <i class="bi bi-search me-2"></i>Search Available Rooms
                </button>
              </div>

              <div class="text-center mt-3">
                <small class="text-muted">
                  <i class="bi bi-info-circle me-1"></i>
                  Check-in: 3:00 PM | Check-out: 11:00 AM
                </small>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Information Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row g-4">
      <div class="col-md-6">
        <div class="d-flex">
          <div class="flex-shrink-0">
            <i class="bi bi-clock display-6 text-primary"></i>
          </div>
          <div class="flex-grow-1 ms-3">
            <h5>Flexible Booking</h5>
            <p class="text-muted mb-0">Free cancellation up to 24 hours before your stay</p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="d-flex">
          <div class="flex-shrink-0">
            <i class="bi bi-shield-check display-6 text-primary"></i>
          </div>
          <div class="flex-grow-1 ms-3">
            <h5>Best Rate Guarantee</h5>
            <p class="text-muted mb-0">Find a better rate? We'll match it and give you 10% off</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{{end}}


{{define "js"}}
<script>

(function () {
    'use strict';
    window.addEventListener('load', function () {
        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        let forms = document.getElementsByClassName('needs-validation');
        // Loop over them and prevent submission
        Array.prototype.filter.call(forms, function (form) {
            form.addEventListener('submit', function (event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    }, false);
})();

document.getElementById("colorButton").addEventListener("click", function () {
    let html = `
    <form id="check-availability-form" action="" method="post" novalidate class="needs-validation">
        <div class="form-row">
            <div class="col">
                <div class="form-row" id="reservation-dates-modal">
                    <div class="col">
                        <input disabled required class="form-control" type="text" name="start" id="start" placeholder="Arrival">
                    </div>
                    <div class="col">
                        <input disabled required class="form-control" type="text" name="end" id="end" placeholder="Departure">
                    </div>

                </div>
            </div>
        </div>
    </form>
    `;
    attention.custom({
        title: 'Choose your dates',
        msg: html,
    });
})

</script>
{{end}}