{{template "base" .}}

{{define "content"}}
{{$res:=index .Data "reservation"}}

<!-- Page Header -->
<section class="bg-success text-white py-5">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <div class="mb-4">
          <i class="bi bi-check-circle display-1"></i>
        </div>
        <h1 class="display-4 fw-bold mb-3">Reservation Confirmed!</h1>
        <p class="lead mb-0">Thank you for choosing Fort Smythe Bed & Breakfast</p>
      </div>
    </div>
  </div>
</section>

<!-- Reservation Summary -->
<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card border-0 shadow-lg">
          <div class="card-header bg-light border-0 py-4">
            <div class="text-center">
              <h3 class="mb-2">Reservation Summary</h3>
              <p class="text-muted mb-0">Please save this confirmation for your records</p>
            </div>
          </div>
          <div class="card-body p-5">
            <div class="row g-4">
              <!-- Guest Information -->
              <div class="col-md-6">
                <div class="border-end pe-md-4">
                  <h5 class="text-primary mb-3">
                    <i class="bi bi-person me-2"></i>Guest Information
                  </h5>
                  <div class="mb-3">
                    <h6 class="mb-1">Name</h6>
                    <p class="mb-0 fs-5">{{$res.FirstName}} {{$res.LastName}}</p>
                  </div>
                  <div class="mb-3">
                    <h6 class="mb-1">Email</h6>
                    <p class="mb-0">{{$res.Email}}</p>
                  </div>
                  <div class="mb-0">
                    <h6 class="mb-1">Phone</h6>
                    <p class="mb-0">{{$res.Phone}}</p>
                  </div>
                </div>
              </div>
              
              <!-- Reservation Details -->
              <div class="col-md-6">
                <div class="ps-md-4">
                  <h5 class="text-primary mb-3">
                    <i class="bi bi-calendar-check me-2"></i>Stay Details
                  </h5>
                  <div class="mb-3">
                    <h6 class="mb-1">Room</h6>
                    <p class="mb-0 fs-5">{{$res.Room.RoomName}}</p>
                  </div>
                  <div class="mb-3">
                    <h6 class="mb-1">Check-in</h6>
                    <p class="mb-0">
                      <i class="bi bi-calendar-plus text-success me-2"></i>
                      {{index .StringMap "start_date"}}
                    </p>
                    <small class="text-muted">After 3:00 PM</small>
                  </div>
                  <div class="mb-0">
                    <h6 class="mb-1">Check-out</h6>
                    <p class="mb-0">
                      <i class="bi bi-calendar-x text-danger me-2"></i>
                      {{index .StringMap "end_date"}}
                    </p>
                    <small class="text-muted">Before 11:00 AM</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Next Steps -->
        <div class="card border-0 shadow-sm mt-4">
          <div class="card-body p-4">
            <h5 class="mb-3">
              <i class="bi bi-list-check text-primary me-2"></i>Next Steps
            </h5>
            <div class="row g-3">
              <div class="col-md-4">
                <div class="d-flex">
                  <div class="flex-shrink-0">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                         style="width: 40px; height: 40px;">
                      <strong>1</strong>
                    </div>
                  </div>
                  <div class="flex-grow-1 ms-3">
                    <h6>Confirmation Email</h6>
                    <p class="text-muted mb-0 small">Check your email for detailed confirmation</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="d-flex">
                  <div class="flex-shrink-0">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                         style="width: 40px; height: 40px;">
                      <strong>2</strong>
                    </div>
                  </div>
                  <div class="flex-grow-1 ms-3">
                    <h6>Prepare for Arrival</h6>
                    <p class="text-muted mb-0 small">Review check-in procedures and local attractions</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="d-flex">
                  <div class="flex-shrink-0">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                         style="width: 40px; height: 40px;">
                      <strong>3</strong>
                    </div>
                  </div>
                  <div class="flex-grow-1 ms-3">
                    <h6>Enjoy Your Stay</h6>
                    <p class="text-muted mb-0 small">We look forward to welcoming you!</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Contact Information -->
        <div class="text-center mt-4">
          <p class="text-muted mb-3">
            Questions about your reservation? Contact us at 
            <a href="tel:+15551234567" class="text-decoration-none">(555) 123-4567</a> or 
            <a href="mailto:info@fortsmythebnb.com" class="text-decoration-none">info@fortsmythebnb.com</a>
          </p>
          <a href="/" class="btn btn-primary px-4 py-2">
            <i class="bi bi-house me-2"></i>Return to Homepage
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
{{end}}
